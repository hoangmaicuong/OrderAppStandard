@model OrderApp.Models.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/assets-login/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets-login/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    @*<link rel="stylesheet" type="text/css" href="~/Content/assets-login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">*@
    <link rel="stylesheet" href="~/assets/font/font-awesome-pro-v6-6.2.0/css/all.min.css" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets-login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets-login/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets-login/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets-login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets-login/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Content/assets-login/images/img-01.png" alt="IMG">
                </div>
                @using (Html.BeginForm("Login", "AccountManage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @id = "loginForm", @class = "login100-form validate-form" }))
                {
                    @Html.AntiForgeryToken()
                    <span class="login100-form-title">
                        Member Login
                    </span>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                    <div class="wrap-input100">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "input100", @placeholder = "Phone" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    <div class="wrap-input100">
                        @Html.PasswordFor(m => m.Password, new { @class = "input100", @placeholder = "Password" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="javascript:;" onclick="alert('Liên hệ Admin để lấy lại mật khẩu')">
                            Username / Password?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="@Url.Action("Register","AccountManage")">
                            Create your Company
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/Content/assets-login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets-login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/assets-login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets-login/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets-login/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
        document.getElementById("loginForm").addEventListener("submit", function (e) {
            const btn = this.querySelector(".login100-form-btn");
            btn.disabled = true; // tránh submit nhiều lần
            btn.innerHTML = `<i class="fa-solid fa-loader fa-spin fa-spin-reverse"></i>&nbsp;${btn.innerHTML}`
        });
    </script>
    <!--===============================================================================================-->
    <script src="~/Content/assets-login/js/main.js"></script>

</body>
</html>
