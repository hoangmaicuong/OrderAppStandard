@using OrderApp.Models
@model RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Register</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/assets-register/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets-register/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    @*<link rel="stylesheet" type="text/css" href="~/Content/assets-register/fonts/font-awesome-4.7.0/css/font-awesome.min.css">*@
    <link rel="stylesheet" href="~/assets/font/font-awesome-pro-v6-6.2.0/css/all.min.css" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets-register/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets-register/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets-register/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets-register/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets-register/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets-register/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets-register/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets-register/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                @using (Html.BeginForm("Register", "AccountManage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @id = "registerForm", @class = "login100-form validate-form" }))
                {
                    @Html.AntiForgeryToken()
                    <span class="login100-form-title p-b-26">
                        Welcome
                    </span>
                    <span class="login100-form-title p-b-48">
                        <i class="zmdi zmdi-font"></i>
                    </span>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                    <div class="wrap-input100">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "input100" })
                        <span class="focus-input100" data-placeholder="Phone"></span>
                    </div>

                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    <div class="wrap-input100">
                        <span class="btn-show-pass">
                            <i class="zmdi zmdi-eye"></i>
                        </span>
                        @Html.PasswordFor(m => m.Password, new { @class = "input100" })
                        <span class="focus-input100" data-placeholder="Password"></span>
                    </div>

                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    <div class="wrap-input100">
                        <span class="btn-show-pass">
                            <i class="zmdi zmdi-eye"></i>
                        </span>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input100" })
                        <span class="focus-input100" data-placeholder="Confirm Password"></span>
                    </div>

                    @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "text-danger" })
                    <div class="wrap-input100">
                        @Html.TextBoxFor(m => m.CompanyName, new { @class = "input100" })
                        <span class="focus-input100" data-placeholder="Company Name"></span>
                    </div>

                    @Html.ValidationMessageFor(m => m.CompanySlug, "", new { @class = "text-danger" })
                    <div class="wrap-input100">
                        @Html.TextBoxFor(m => m.CompanySlug, new { @class = "input100" })
                        <span class="focus-input100" data-placeholder="Company Slug"></span>
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button type="submit" class="login100-form-btn">
                                Register
                            </button>
                        </div>
                    </div>

                    <div class="text-center p-t-115">
                        <span class="txt1">
                            Don’t have an account?
                        </span>

                        <a class="txt2" href="@Url.Action("Login", "AccountManage")">
                            Sign Up
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/Content/assets-register/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets-register/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets-register/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/assets-register/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets-register/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets-register/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/assets-register/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets-register/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script>
        document.getElementById("registerForm").addEventListener("submit", function (e) {
            const btn = this.querySelector(".login100-form-btn");
            btn.disabled = true; // tránh submit nhiều lần
            btn.innerHTML = `<i class="fa-solid fa-loader fa-spin fa-spin-reverse"></i>&nbsp;${btn.innerHTML}`
        });
    </script>
    <script src="~/Content/assets-register/js/main.js"></script>

</body>
</html>

