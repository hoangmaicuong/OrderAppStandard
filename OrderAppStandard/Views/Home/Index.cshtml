    <style>
        body {
            box-sizing: border-box;
        }

        .gradient-bg {
            background: linear-gradient(135deg, #3b82f6, #1e40af);
            position: relative;
        }

        .gradient-bg > * {
            position: relative;
            z-index: 2;
        }

        .text-shadow {
            text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
        }

        .feature-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        }

        .qr-animation {
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .floating {
            animation: float 3s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }

        .floating-icon {
            position: fixed;
            z-index: 1;
            pointer-events: none;
            opacity: 0.6;
        }

        .floating-icon-1 { animation: floatAround1 15s linear infinite; }
        .floating-icon-2 { animation: floatAround2 18s linear infinite; }
        .floating-icon-3 { animation: floatAround3 20s linear infinite; }
        .floating-icon-4 { animation: floatAround4 22s linear infinite; }
        .floating-icon-5 { animation: floatAround5 16s linear infinite; }
        .floating-icon-6 { animation: floatAround6 19s linear infinite; }

        @@keyframes floatAround1 {
            0% { top: 10%; left: -5%; transform: rotate(0deg); }
            25% { top: 80%; left: 20%; transform: rotate(90deg); }
            50% { top: 70%; left: 90%; transform: rotate(180deg); }
            75% { top: 20%; left: 70%; transform: rotate(270deg); }
            100% { top: 10%; left: -5%; transform: rotate(360deg); }
        }

        @@keyframes floatAround2 {
            0% { top: 90%; left: 10%; transform: rotate(0deg); }
            25% { top: 30%; left: 80%; transform: rotate(90deg); }
            50% { top: 10%; left: 50%; transform: rotate(180deg); }
            75% { top: 60%; left: 5%; transform: rotate(270deg); }
            100% { top: 90%; left: 10%; transform: rotate(360deg); }
        }

        @@keyframes floatAround3 {
            0% { top: 50%; left: 100%; transform: rotate(0deg); }
            25% { top: 20%; left: 30%; transform: rotate(90deg); }
            50% { top: 80%; left: 10%; transform: rotate(180deg); }
            75% { top: 40%; left: 60%; transform: rotate(270deg); }
            100% { top: 50%; left: 100%; transform: rotate(360deg); }
        }

        @@keyframes floatAround4 {
            0% { top: 30%; left: -3%; transform: rotate(0deg); }
            25% { top: 70%; left: 40%; transform: rotate(90deg); }
            50% { top: 20%; left: 85%; transform: rotate(180deg); }
            75% { top: 90%; left: 25%; transform: rotate(270deg); }
            100% { top: 30%; left: -3%; transform: rotate(360deg); }
        }

        @@keyframes floatAround5 {
            0% { top: 80%; left: 95%; transform: rotate(0deg); }
            25% { top: 15%; left: 60%; transform: rotate(90deg); }
            50% { top: 60%; left: 5%; transform: rotate(180deg); }
            75% { top: 35%; left: 80%; transform: rotate(270deg); }
            100% { top: 80%; left: 95%; transform: rotate(360deg); }
        }

        @@keyframes floatAround6 {
            0% { top: 60%; left: 15%; transform: rotate(0deg); }
            25% { top: 10%; left: 75%; transform: rotate(90deg); }
            50% { top: 85%; left: 60%; transform: rotate(180deg); }
            75% { top: 25%; left: 10%; transform: rotate(270deg); }
            100% { top: 60%; left: 15%; transform: rotate(360deg); }
        }
    </style>
</head>
